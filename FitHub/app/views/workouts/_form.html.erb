                    <% Exercise.where("muscle_group = 'Arms'").each do |element| %>
                      <label name="<%= element.id %>" for="workout_exercise_ids_<%= element.id %>"><input type="checkbox" value="<%= element.id %>" name="workout[exercise_ids][]" id="workout_exercise_ids_<%= element.id %>"> <%= element.name%></label><br>
                      <script type="text/javascript">
                        $("#workout_exercise_ids_<%= element.id %>").click(function() {
                          var html = '<div class="sets_and_reps"><img src="<%=element.pic_left %>" style="max-width:45%;height:auto"> <img src="<%= element.pic_right.gsub("1.jpg", "2.jpg") %>" style="max-width:45%;height:auto;"><br><br>Number of Sets: <input type="hidden" name="details[][ex_num]" value ="<%=element.id %>"><input type="text" name="details[][sets]" id="details_sets" > Number of Reps: <input type="text" name="details[][reps]" id="details_reps" ></div>'
                          if ($(this).is(':checked')) {
                            $("label[for='workout_exercise_ids_<%= element.id %>']").append(html)
                          } else {
                            $(this).siblings('.sets_and_reps').remove('.sets_and_reps')
                          }
                        })
                      </script>

