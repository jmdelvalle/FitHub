        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.hidden_field :creator, :value => current_user.name %>
        <div class="field">
          <h3><%= f.label :name %><br></h3>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <h3><%= f.label :category %><br></h3>
          <%= radio_button("workout", "category", "Bodybuilding") %> Bodybuilding <br>
          <%= radio_button("workout", "category", "Strength") %> Strength <br>
          <%= radio_button("workout", "category", "High Intensity Interval Training") %> High Intensity Interval Training <br>
          <%= radio_button("workout", "category", "Upper Body") %> Upper Body <br>
          <%= radio_button("workout", "category", "Lower Body") %> Lower Body <br>
          <%= radio_button("workout", "category", "Core") %> Core <br>
        </div>
        <div class="field">
          <h3><%= f.label :description %><br></h3>
          <%= f.text_area :description %>
        </div>
        <div class="field">
          <h3><%= f.label "How Often Should This Workout Be Performed?" %><br></h3>
          <input value="Monday" type="checkbox" name="days[]" id="workout_days_monday"> <strong>Monday</strong>
          <input value="Tuesday" type="checkbox" name="days[]" id="workout_days_tuesday"> <strong>Tuesday</strong>
          <input value="Wednesday" type="checkbox" name="days[]" id="workout_days_wednesday"> <strong>Wednesday</strong>
          <input value="Thursday" type="checkbox" name="days[]" id="workout_days_thursday"> <strong>Thursday</strong>
          <input value="Friday" type="checkbox" name="days[]" id="workout_days_friday"> <strong>Friday</strong>
          <input value="Saturday" type="checkbox" name="days[]" id="workout_days_saturday"> <strong>Saturday</strong>
          <input value="Sunday" type="checkbox" name="days[]" id="workout_days_sunday"> <strong>Sunday</strong>
        </div>
        <div class="field">
          <h3><%= f.label :challenges %><br></h3>
          <%= f.text_area :challenges %>
        </div><br>

          <h3>Exercise Categories</h3>

          <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

            <!-- This is the accordion group for Arms -->
            <div class="panel panel-default">
              <div class="panel-heading" role="tab" id="heading_one">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#accordion" data-target="#armExercises" href="#armExercises" aria-expanded="true" aria-controls="collapseOne">Arm Exercises</a>
                </h4>
              </div>
              <!-- Finished -->
              <div class="panel-collapse collapse" id="armExercises" role="tabpanel" aria-labelledby="headingOne">
