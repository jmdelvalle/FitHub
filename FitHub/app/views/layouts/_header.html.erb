<div id="wrapper">

  <!-- Navigation -->
  <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
      <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button">
        <span class="sr-only">Toggle navigation</span>
      </button>
      <%= link_to "FitHub", root_url, class: "navbar-brand" %>
    </div>
    <!-- /.navbar-header -->
    <% if current_user %>
    <ul class="nav navbar-top-links navbar-right">

      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="fa fa-user"></i>
          <%= current_user.name %>
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu dropdown-user">
          <li>
            <%= link_to '<i class="fa fa-fw fa-user"></i> My Profile'.html_safe, users_profile_path %>
          </li>
          <li>
            <%= link_to '<i class="fa fa-folder-open"></i> My Workouts'.html_safe, my_workouts_path %>
          </li>
          <li>
            <%= link_to "Followed Workouts", followed_path%>
          </li>
          <li>
            <%= link_to '<i class="fa fa-plus-square"></i> New Workout'.html_safe, new_workout_path%>
          </li>
          <li class="divider"></li>
          <li>
            <%= link_to '<i class="fa fa-fw fa-power-off"></i> Log Out'.html_safe, sign_out_path, :method => :delete %>
          </li>
        </ul>
        <!-- /.dropdown-user -->
      </li>
      <!-- /.dropdown -->
    </ul>
    <!-- /.navbar-top-links -->

    <div class="navbar-default sidebar" role="navigation">
      <div class="sidebar-nav navbar-collapse">
        <ul class="nav in" id="side-menu">
          <div id="Workouts">
            <li><a aria-controls="collapseOne" aria-expanded="true" data-parent="#accordion" data-target="#armExercises" data-toggle="collapse" href="#armExercises" role="button">Arm Exercises</a></li>
            <div aria-labelledby="headingOne" class="panel-collapse collapse" id="armExercises" role="tabpanel">
            </div>
          </div>
          <li><%= link_to "Home", users_home_path %></li>
          <li><%= link_to "All Workouts", workouts_path %></li>
          <li><%= link_to "Find Gyms", gyms_path %></li>
          <li><%= link_to "Find Friends", users_path %></li>
        </ul>
      </div>
      <!-- /.sidebar-collapse -->
    </div>
    <!-- /.navbar-static-side -->
  </nav>
  <% end %>

  <div id="page-wrapper" style="min-height: 359px;">
    <div class="row" id="page-body">
      <%= yield %>
    </div>
  </div>
  <!-- /#page-wrapper -->

</div>
