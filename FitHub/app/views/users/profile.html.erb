

<% flasher = notice ? [notice, "success"] : [alert, "alert"] %>
<%= render partial: "flashes", locals: {flash_class: flasher.first, flash_message: flasher.last} %>

<div align="center"><h1><%= current_user.name %></h1><br></div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class= "well well-sm">
        <div align="center">
          <h2>Your Personal Stats</h2>
          <h5>Current Body Weight: <%= current_user.c_bodyweight %> lbs<br></h5>
          <h5>Current Bench Weight: <%= current_user.c_bench %> lbs<br></h5>
          <h5>Current Squat Weight: <%= current_user.c_squat %> lbs<br></h5>
          <h5>Current Deadlift Weight: <%= current_user.c_deadlift %> lbs<br></h5>
        </div><br><br>

        <div align="center">
          <h2>Your Future Goals</h2>
          <h5>Target Body Weight: <%= current_user.t_bodyweight %> lbs<br></h5>
          <h5>Target Bench Weight: <%= current_user.t_bench %> lbs<br></h5>
          <h5>Target Squat Weight: <%= current_user.t_squat %> lbs<br></h5>
          <h5>Target Deadlift Weight: <%= current_user.t_deadlift %> lbs<br></h5><br>
          <div class="button"><h3><%= link_to "Edit Profile",  edit_user_path(current_user.id) %></h3></div>
        </div>
      </div>
    </div>
    <div class="col-md-3"></div>
    <% if current_user.friendships.count == 1 %>
      <h3>Following <%= current_user.friendships.count %> person</h3>
    <% else %>
      <h3>Following <%= current_user.friendships.count %> people</h3>
    <% end %>
<ul>
  <% for friendship in current_user.friendships %>
    <li>
      <%=h friendship.friend.name %>
      (<%= link_to "remove", friendship, :method => :delete %>)
    </li>
  <% end %>
</ul>

<p><%= link_to "Find Friends", users_path %></p>

<h3><%= current_user.inverse_friends.count %> people are following you</h3>
<ul>
  <% for user in current_user.inverse_friends %>
    <li><%=h user.name %></li>
  <% end %>
</ul>
  </div>
