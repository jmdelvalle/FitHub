<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user= User.all %>
    <% @user.select do |user| %>
    <% if user.name != current_user.name%>
    <strong> <%= user.name %> </strong>
    <tr>
  <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
    </tr><br>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>